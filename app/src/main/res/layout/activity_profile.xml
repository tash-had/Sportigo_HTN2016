<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.sportigo.maapp.Profile_Activity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pdp"
        android:src="@drawable/pic05"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Johnathan Sebastion House"
        android:id="@+id/pname"
        android:layout_below="@+id/pdp"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prating"
        android:layout_below="@+id/pname"
        android:layout_centerHorizontal="true"
        android:numStars="5"
        android:rating="3.3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:layout_below="@+id/prating"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/desc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="My name is John, and I&apos;m a barista by day and a basketball player by night. I love to play pickup games when I&apos;m fre, but be warned - I go hard in the paint. Elbows are thrown!"
        android:id="@+id/pdesc"
        android:layout_below="@+id/imageView10"
        android:layout_alignLeft="@+id/pname"
        android:layout_alignStart="@+id/pname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="- Charity Basketball for Children with Cancer \n- Barbells and Barbies \n- Badminton at the Y \n- Canoeing at Outer harbor"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageView9"
        android:layout_alignRight="@+id/pname"
        android:layout_alignEnd="@+id/pname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Currently Attending"
        android:id="@+id/textView5"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="About Me"
        android:id="@+id/textView6"
        android:layout_above="@+id/pdesc"
        android:layout_alignLeft="@+id/pdesc"
        android:layout_alignStart="@+id/pdesc" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:src="@drawable/list"
        android:layout_below="@+id/pdesc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
